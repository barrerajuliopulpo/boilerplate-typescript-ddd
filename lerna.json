{
  "packages": ["apps/*", "libraries/*", "src/*"],
  "version": "0.0.0",
  "npmClient": "yarn",
  "individually": true,
  "useWorkspaces": true,
  "command": {
    "publish": {
      "conventionalCommit": true,
      "yes": true
    },
    "version": {
      "allowBranch": ["master"],
      "message": "chore(release): publish %s"
    }
  }
}
