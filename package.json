{
  "name": "boilerplate",
  "version": "1.0.0",
  "devDependencies": {
    "lerna": "^5.1.1"
  },
  "scripts": {
    "semantic-release": "semantic-release",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx"
  },
  "workspaces": [
    "apps/*",
    "libraries/*",
    "src/*"
  ],
  "private": true,
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint"
    }
  }
}
